<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp">


    <ImageView
        android:id="@+id/ivBeef"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:padding="8dp"
        android:src="@drawable/makan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBeef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beef"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/ivBeef"
        app:layout_constraintStart_toStartOf="@+id/ivBeef"
        app:layout_constraintTop_toBottomOf="@+id/ivBeef" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/tvBeef"
        app:layout_constraintStart_toStartOf="@+id/tvBeef"
        app:layout_constraintTop_toBottomOf="@+id/tvBeef">

        <TextView
            android:id="@+id/tvInstructionBeef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="12dp"
            android:text="instruksi kwkwkwkwkkwkwkkwkwkwkkw"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvIngredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredient :"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvIngredientDetail1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="daging sapi 1 kg"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvIngredientDetail2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="daging sapi 1 kg"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/tvIngredientDetail3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="daging sapi 1 kg"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColor="@color/white" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>